<div class="container">
  <h1 class ="prems">Cocktails</h1>
   <p><%= link_to 'Add a new cocktail', new_cocktail_path, class: "btn btn-primary" %></p>


  <% @cocktails.each do |cocktail| %>

  <p><%= link_to(cocktail_path(cocktail)) do %>
    <i class="fas fa-glass-martini"></i> <%= cocktail.name %>
    <% end %></p>
  <% end %>
</div>


